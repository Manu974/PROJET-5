<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Observation" table="observation">
    <indexes>
      <index name="IDX_C576DBE0A76ED395" columns="user_id"/>
      <index name="IDX_C576DBE0E813F9" columns="bird_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="UNIQ_C576DBE03DA5256D" columns="image_id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="latitude" type="float" column="latitude" precision="10" scale="0" nullable="false"/>
    <field name="longitude" type="float" column="longitude" precision="10" scale="0" nullable="false"/>
    <field name="observation" type="text" column="observation" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isValid" type="boolean" column="is_valid" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <many-to-one field="bird" target-entity="Bird" fetch="LAZY">
      <join-columns>
        <join-column name="bird_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="image" target-entity="ObservationImage" fetch="LAZY">
      <join-columns>
        <join-column name="image_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
